{
  "name": "routerworkers",
  "version": "0.0.6",
  "description": "Um roteador simples para trabalhadores cloudflare. Suporta middlewares, cache e injeta por padrÃ£o alguns dados transformados ao objeto Request.",
  "repository": {
    "type": "git",
    "url": "https://github.com/HelenoSalgado/routerworkers.git"
  },
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript && npm run minify && npm run test",
    "minify": "bash minify -i dist/index.js",
    "test": "jest",
    "clean": "rm -rf ./dist && mkdir dist"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "router"
  ],
  "author": "Heleno Salgado",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240725.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "rollup": "^4.19.1",
    "ts-jest": "^29.2.3",
    "tslib": "^2.6.3",
    "typescript": "^5.5.4",
    "wrangler": "^3.67.1"
  },
  "jest": {
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "node_modules/(?!shiva/)"
    ],
    "testMatch": [
      "<rootDir>/test/index.test.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+.tsx?$": [
        "ts-jest",
        {}
      ]
    }
  }
}
